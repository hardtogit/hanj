.goodsItem {
  width: 169px;
  margin: 0 6px;
  float: left;
  margin-bottom: 15px;
}
.goodsItem .img {
  width: 169px;
  height: 169px;
  background-color: #ddd;
  border-radius: 5px;
  box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.13);
}
.goodsItem .name {
  font-size: 15px;
  margin-top: 8px;
  color: #333;
}
.goodsItem .code {
  color: #F20C0C;
  font-size: 15px;
}

