.header {
  height: 200px;
  width: 100%;
  background: url("http://47.96.88.157/cgi-bin/download.pl?fid=f15722458908924939632001&proj=rrd");
  background-size: 100% 100%;
  display: flex;
}
.header .left {
  width: 105px;
}
.header .right {
  flex: 1;
  padding-left: 20px;
  color: #fff;
  font-size: 15px;
}
.header .right .item {
  margin-top: 25px;
}
.header .right .item .label {
  display: block;
}
.bar {
  width: 345px;
  height: 60px;
  box-shadow: 0px 1.5px 8px 0px rgba(0, 0, 0, 0.09);
  border-radius: 10px;
  display: flex;
  margin: -30px auto 0 auto;
  background-color: #fff;
}
.bar .left {
  flex: 1;
  display: flex;
  align-items: center;
}
.bar .left .img {
  width: 20px;
  height: 20px;
  margin-left: 15px;
}
.bar .left .label {
  margin-left: 10px;
}
.bar .left .num {
  margin-left: 2px;
  color: #FCAC45;
}
.bar .right {
  flex: 1;
  display: flex;
  align-items: center;
}
.bar .right .img {
  width: 20px;
  height: 20px;
  margin-left: 15px;
}
.bar .right .label {
  margin-left: 10px;
}
.bar .right .num {
  margin-left: 2px;
  color: #FCAC45;
}
.content {
  display: flex;
  width: 100%;
  padding-top: 48px;
}
.content .left {
  flex: 1;
  text-align: center;
}
.content .left .img {
  width: 22px;
  height: 22px;
}
.content .left .text {
  font-size: 12px;
  color: #666;
  margin-top: 6px;
}
.content .right {
  flex: 1;
  text-align: center;
}
.content .right .img {
  width: 18px;
  height: 22px;
}
.content .right .text {
  font-size: 12px;
  color: #666;
  margin-top: 6px;
}
.baseModal .title {
  font-size: 21px;
  margin-top: 12px;
  color: #333;
  text-align: center;
}

