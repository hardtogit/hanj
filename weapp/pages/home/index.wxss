.header {
  padding: 15px;
}
.header .tabs {
  margin-top: 15px;
  display: flex;
  height: 70px;
  align-items: center;
}
.header .tabs .tab {
  flex: 1;
}
.header .tabs .tab.left {
  padding-right: 7px;
}
.header .tabs .tab.left .plane {
  background-color: #FFB023;
  border-radius: 5px;
  height: 70px;
  display: flex;
  align-items: center;
}
.header .tabs .tab.left .plane .left {
  width: 75px;
}
.header .tabs .tab.left .plane .left .img {
  width: 35px;
  height: 35px;
  display: block;
  margin: 0 auto;
}
.header .tabs .tab.left .plane .right {
  color: #fff;
  flex: 1;
}
.header .tabs .tab.left .plane .right .label {
  font-size: 15px;
}
.header .tabs .tab.left .plane .right .char {
  font-size: 8px;
  margin-top: 6px;
}
.header .tabs .tab.right {
  padding-left: 7px;
}
.header .tabs .tab.right .plane {
  height: 70px;
  background-color: #FF6969;
  border-radius: 5px;
  display: flex;
  align-items: center;
}
.header .tabs .tab.right .plane .left {
  width: 75px;
}
.header .tabs .tab.right .plane .left .img {
  width: 35px;
  height: 35px;
  display: block;
  margin: 0 auto;
}
.header .tabs .tab.right .plane .right {
  color: #fff;
  flex: 1;
}
.header .tabs .tab.right .plane .right .label {
  font-size: 15px;
}
.header .tabs .tab.right .plane .right .char {
  font-size: 8px;
  margin-top: 6px;
}
.header .searchBar {
  margin-top: 15px;
  padding: 0 10px 10px 10px;
  box-shadow: 0px 2px 20px 0px rgba(0, 0, 0, 0.18);
  border-radius: 5px;
}
.header .searchBar .timeBar {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #999;
}
.header .searchBar .timeBar .label {
  margin-right: 4px;
  height: 50px;
  line-height: 54px;
  border-bottom: 1px solid #3B81FA;
}
.header .searchBar .timeBar .char {
  margin: 0 4px;
}
.header .searchBar .timeBar .dateItem {
  width: 106px;
  height: 28px;
  display: inline-block;
}
.header .searchBar .timeBar .datePicker {
  width: 106px;
  height: 28px;
  display: inline-block;
  border: 1px solid #999;
}
.header .searchBar .addressBar {
  height: 50px;
  align-items: center;
  display: flex;
}
.header .searchBar .addressBar .left {
  flex: 1;
}
.header .searchBar .addressBar .center {
  width: 19px;
  height: 19px;
}
.header .searchBar .addressBar .right {
  flex: 1;
  text-align: right;
}
.header .searchBar .search {
  width: 320px;
  height: 30px;
  line-height: 30px;
  margin: 0 auto;
  background-color: #3B81FA;
  color: #fff;
  text-align: center;
  border-radius: 5px;
}

